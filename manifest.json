{
  "manifest_version": 2,
  "name": "NoFlash",
  "description": "This extension removes flash from the current page and replace it with a clickable element to activate later",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "src/img/icon48.png",
    "default_popup": "src/options.html",
    "default_title": "NoFlash"
  },
  "background": {
    "scripts": ["src/js/background.js"]
  },
  "content_scripts": [
    {
      "css": ["src/css/noflash.css"],
      "js": ["src/js/noflash.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options.html",
  "permissions": ["tabs"],
  "icons":{
    "16": "src/img/icon16.png",
    "48": "src/img/icon48.png",
    "128": "src/img/icon128.png"
  }
}
